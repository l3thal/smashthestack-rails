<div id="sessions_new" class="modal">
<div style="padding-top:10px" class="modal-header">
  <h3><%= image_tag('login_header.gif') %></h3>
</div>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="modal-body">
    <div class="inputs"><%= f.label :email %><br />
      <%= f.email_field :email %></div>
    <div class="inputs"><%= f.label :password %><br />
      <%= f.password_field :password %></div>
  <%= f.submit "Sign in", {style: "float:right;margin: 15px"} %>
  </div>
<% end %>
</div>
